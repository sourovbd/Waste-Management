<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androide.citycleaner.SignIn_business">

    <Button
        android:id="@+id/homeButtonBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/singInButtonBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/homeButtonBusiness"
        android:layout_toEndOf="@+id/homeButtonBusiness"
        android:layout_toRightOf="@+id/homeButtonBusiness"
        android:text="Sing in" />

    <Button
        android:id="@+id/signUpButtonBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/singInButtonBusiness"
        android:layout_toRightOf="@+id/singInButtonBusiness"
        android:text="Sign up" />

    <Button
        android:id="@+id/aboutButtonBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/signUpButtonBusiness"
        android:layout_toEndOf="@+id/signUpButtonBusiness" />
    <ImageView
        android:id="@+id/imageViewSignInBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image"
        android:layout_below="@+id/homeButtonBusiness"
        android:layout_alignLeft="@+id/homeButtonBusiness"
        android:layout_alignStart="@+id/homeButtonBusiness"
        android:layout_above="@+id/emailOrPhoneBusiness" />

    <EditText
        android:id="@+id/passwordBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:layout_above="@+id/signInBusiness"
        android:layout_alignLeft="@+id/emailOrPhoneBusiness"
        android:layout_alignStart="@+id/emailOrPhoneBusiness"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/signInBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/forgotPasswordTextBusiness"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Sign In"
        android:onClick="OnLogin"/>

    <TextView
        android:id="@+id/forgotPasswordTextBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:text="forgot password?" />

    <EditText
        android:id="@+id/emailOrPhoneBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signInBusiness"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email or Phone" />
</RelativeLayout>
