<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.androide.citycleaner.ReportGarbage_IndividualActivity">

    <TextView
        android:id="@+id/report_garbage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Report on garbage" />

    <ImageView
        android:layout_below="@+id/report_garbage"
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        app:srcCompat="@drawable/image" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/tv_image_garbage"
        android:layout_height="100dp"
        android:id="@+id/img_garbage"
        android:layout_below="@id/image_logo"
        />

    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_image_garbage"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="30dp"
        android:text="Image"
        android:textSize="18sp"
        android:layout_below="@+id/image_logo" />

    <Button
        android:id="@+id/upload_btn"
        android:background="#00FF00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_garbage"
        android:layout_alignEnd="@id/img_garbage"
        android:layout_alignStart="@id/img_garbage"
        android:layout_marginLeft="10dp"
        android:text="Upload" />

    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Address"
        android:textSize="18sp"
        android:layout_below="@+id/upload_btn" />

    <EditText android:inputType="textMultiLine"
        android:id="@+id/edittext_address"
    android:lines="6"
    android:minLines="4"
    android:gravity="top|left"
    android:maxLines="7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/upload_btn"
        android:layout_alignEnd="@id/img_garbage"
        android:layout_alignStart="@id/img_garbage"
        android:background="@drawable/edittext_bg"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/report_btn"
        android:layout_centerHorizontal="true"
        android:background="#00FF00"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_address"
        android:layout_marginLeft="10dp"
        android:text="Send Report" />

</RelativeLayout>
