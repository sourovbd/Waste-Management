<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androide.citycleaner.SignIn_government">
    <Button
        android:id="@+id/homeButtonGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/singInButtonGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/homeButtonGovernment"
        android:layout_toEndOf="@+id/homeButtonGovernment"
        android:layout_toRightOf="@+id/homeButtonGovernment"
        android:text="Sing in" />

    <Button
        android:id="@+id/signUpButtonGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/singInButtonGovernment"
        android:layout_toRightOf="@+id/singInButtonGovernment"
        android:text="Sign up" />

    <Button
        android:id="@+id/aboutButtonGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/signUpButtonGovernment"
        android:layout_toEndOf="@+id/signUpButtonGovernment" />
    <ImageView
        android:id="@+id/imageViewSignGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image"
        android:layout_below="@+id/homeButtonGovernment"
        android:layout_alignLeft="@+id/homeButtonGovernment"
        android:layout_alignStart="@+id/homeButtonGovernment"
        android:layout_above="@+id/emailMobGovernment" />

    <EditText
        android:id="@+id/emailMobGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="203dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email or Mobile no" />

    <EditText
        android:id="@+id/passwordGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailMobGovernment"
        android:layout_alignStart="@+id/emailMobGovernment"
        android:layout_alignTop="@+id/emailMobGovernment"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password" />

    <Button
        android:id="@+id/signInGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordGovernment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Sign In" />

    <TextView
        android:id="@+id/forgotPasswordTextGovernment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signInGovernment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="forgot password?" />
</RelativeLayout>
