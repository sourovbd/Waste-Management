<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androide.citycleaner.Menu_Individual">

    <Button
        android:id="@+id/button5"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:text="Request to governent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="325dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="183dp"
        android:layout_height="205dp"
        app:srcCompat="@drawable/image"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="89dp"
        android:layout_marginEnd="89dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:text="Get Reminder"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:text="Goernment notification"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="325dp"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:text="Nearest Bin"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_alignTop="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:text="Report on garbage"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button8"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:text="Use points"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="325dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
